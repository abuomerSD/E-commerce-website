<%- include('./control-panel/partials/adminHead.ejs') %>
<%- include('./control-panel/partials/nav.ejs') %>
<div class="container">
    <div class="title">
        <h3>Users</h3>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" placeholder="First Name" id="firstName" required>
        </div>
        <div class="col-md-2">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" placeholder="Last Name" id="lastName" required>
        </div>
        <div class="col-md-2">
            <label for="email">Email</label>
            <input type="email" class="form-control" placeholder="Email" id="email" required>
        </div>
        <div class="col-md-2">
            <label for="username">Username</label>
            <input type="text" class="form-control" placeholder="Username" id="username" required>
        </div>
        <div class="col-md-2">
            <label for="password">Password</label>
            <input type="password" class="form-control" placeholder="Password" id="password" required>
        </div>
        <div class="col-md-2">
            <label for="role" style="display: block;">Role</label>
            <select id="role" class="form-select">
                <option value="admin">admin</option>
                <option value="user">user</option>
            </select>
        </div>
    </div>
    <button class="btn btn-success mt-2" onclick="addUser()">Add User</button>
    <h6 id="status" style="display: none;"></h6>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
            </tr>
            <tbody>
                <% let rowNumber = 1 %>
                <% users.forEach(user => { %>
                    <tr>
                        <th scope="row"><%= rowNumber %></th>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.email %></td>
                        <td><%= user.username %></td>
                    </tr>
                    <% rowNumber++; %>
                <% }); %>
            </tbody>
        </thead>
    </table>
</div>
<script src="/js/control-panal-js/users.js"></script>
<%- include('./control-panel/partials/footer.ejs') %>