<form id="email-form" class="email-password-reset-form p-2">
    <p id="userId" style="display: none;"><%= userId %></p>
    <input name="password" type="password" class="form-control m-1" required placeholder="Enter New Password">
    <p id="checkPasswordParagraph" style="display: none;"></p>
    <input name="passwordRepeat" type="password" class="form-control m-1" required placeholder="Repeat the new Password">
    <p id="checkPasswordRepeatParagraph" style="display: none;"></p>
    <button type="submit" id="submit" class="btn btn-success m-1" disabled>Submit</button>
</form>
<script src="/js/public-js/passwordReset.js"></script>
