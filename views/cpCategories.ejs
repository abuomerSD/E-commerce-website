<!DOCTYPE html>
<html lang="en">
<%- include('./control-panel/partials/adminHead.ejs') %>
<body>
    <!-- main container start -->
    <%- include('./control-panel/partials/nav.ejs') %>
    <div class="main-container">

        <!-- Save Category start -->
        <form action="/admin/categories" method="POST">
            
            <label for="categoryNameInput">Category Name</label>
            <div class="input-group" >
                <input type="text" class="form-control" id="categoryNameInput" name="name" placeholder="Category Name" aria-label="Example text with button addon" aria-describedby="button-addon1">
                <button class="btn btn-success" type="submit" id="button-addon1">Save</button>
            
            </div>
        </form>
        <!-- Save Category end -->

        <hr>

        <!-- search category start -->
        <form action="/admin/categories" method="POST">
            
            <label for="categoryNameSearchInput">Search Category</label>
            <div class="input-group" >

                <input type="text" class="col-md-4 ml-2 p-2" id="categoryNameSearchInput" name="name" placeholder="Category Name" aria-label="Example text with button addon" aria-describedby="button-addon1">
                <button class="btn btn-success" type="submit" id="button-addon1">Search</button>
            
            </div>
        </form>
        <!-- search category end -->        

        <!-- Categories Table start -->
        <h3 class="mt-2">Categories</h3>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>                
                <th scope="col">Category Name</th>
                <th scope="col">Edit & Delete</th>
              </tr>
            </thead>
            <tbody>

                <% let rowNumber = 1 %>
                <% categories.forEach(category => { %>
                    <tr>
                        <th scope="row"><%= rowNumber  %></th>
                        <td> <%= category.name %> </td>
                        <td><button type="button" class="btn btn-primary">Edit</button>
                            <button type="button" class="btn btn-danger">Delete</button>
                        </td>
                        <td></td>
                    </tr>
                    <% rowNumber ++; %>
                <% }); %>
            </tbody>
          </table>
        <!-- Categories Table end -->

    </div>
    <!-- main container end -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/control-panal-js/categories.js"></script>

</body>
</html>